<%= form_for @host, html: { class: 'form-horizontal' } do |f| %>
<div class="row-fluid">
  <div class="span5">
    <%= f.text_field :name, class: 'text_field' %>
    <%= f.text_field :ip_address, class: 'text_field' %>
    <%= f.check_box :active, class: 'check_box' %>
    <%= f.text_area :description, class: 'text_area' %>
  </div>
  <div class="span7">
    <%= f.fields_for :host_relations do |relation| %>
      <%= render partial: 'host_relation_fields', locals: { f: relation } %>
    <% end -%>
    <%= button_tag(t('hosts.form.add_service_role_select'), id: 'add_relation_fields', class: 'btn btn-inverse btn-mini', data: { association: :host_relations }) %>
    <%= template_for_relation_fields(f, :host_relations) %>
  </div>
</div>
<div class="form-actions">
  <%= f.submit nil, class: 'btn btn-primary' %>
</div>
<% end %>
